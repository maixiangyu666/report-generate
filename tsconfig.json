{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"outDir": "dist",               // 编译输出目录
		"rootDir": "src",               // 源码目录
		"emitDeclarationOnly": false,       // 生成 .js 文件
		"lib": [
			"ES2022"
		],
		"sourceMap": true,

		"strict": false,
		"typeRoots": [
			"./node_modules/@types"
		],
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	}
}
